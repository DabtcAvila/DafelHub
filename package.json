{
  "name": "dafelhub-github-pages",
  "version": "0.1.0",
  "description": "DafelHub Enterprise SaaS Platform - GitHub Pages Deployment",
  "main": "docs/index.html",
  "scripts": {
    "dev": "npx serve docs -l 3000",
    "build": "echo 'Static site - no build needed'",
    "start": "npx serve docs -l 3000",
    "deploy": "gh-pages -d docs",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "lighthouse:ci": "lhci autorun",
    "perf:test": "node scripts/performance-test.js",
    "perf:test:desktop": "node scripts/performance-test.js --url http://localhost:3000",
    "perf:test:full": "npm run start & sleep 5 && node scripts/performance-test.js && kill %1",
    "perf:monitor": "npm run start & sleep 2 && open http://localhost:3000/performance-dashboard.html",
    "perf:ci": "npm run start & sleep 5 && npm run lighthouse:ci && npm run perf:test && kill %1",
    "test": "npm run perf:test",
    "test:ci": "npm run perf:ci"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DabtcAvila/DafelHub.git"
  },
  "keywords": [
    "saas",
    "enterprise",
    "consulting", 
    "ai",
    "multi-agent",
    "spec-driven-development",
    "github-pages"
  ],
  "author": "Dafel Consulting",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DabtcAvila/DafelHub/issues"
  },
  "homepage": "https://dabtcavila.github.io/DafelHub",
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "chrome-launcher": "^1.1.0",
    "gh-pages": "^6.1.1",
    "glob": "^10.3.10",
    "lighthouse": "^11.4.0",
    "puppeteer": "^21.6.1",
    "serve": "^14.2.1"
  },
  "dependencies": {
    "http-proxy-middleware": "^2.0.6"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}