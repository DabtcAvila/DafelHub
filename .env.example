# DafelHub Environment Configuration
# Copy this file to .env and configure your values

# Application Settings
APP_NAME=DafelHub
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
VERSION=0.1.0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_V1_STR=/api/v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/dafelhub
DATABASE_ECHO=false

# Redis Configuration  
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security & Authentication
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# Encryption (AES-256-GCM)
# Generate with: python -c "import secrets,base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
DAFELHUB_MASTER_KEY=

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,https://localhost:3000,http://127.0.0.1:3000

# Email Configuration (Optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=
EMAILS_FROM_NAME=DafelHub

# AI Agents Configuration
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# Agent Settings
DEFAULT_AGENT_MODEL=claude-3-sonnet
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT=30

# Monitoring & Observability
SENTRY_DSN=
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# Connection Management
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
HEALTH_CHECK_INTERVAL=60000
AUTO_RECONNECT=true

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.docx,.txt,.md,.json,.yaml,.yml

# Feature Flags
ENABLE_BACKGROUND_TASKS=true
ENABLE_WEBSOCKETS=true
ENABLE_CACHING=true

# Development Tools
ENABLE_DOCS=true
ENABLE_ADMIN=true
ENABLE_DEBUG_TOOLBAR=false

# Production Settings (override in production .env)
# ENVIRONMENT=production
# DEBUG=false
# DATABASE_URL=postgresql://prod_user:prod_pass@prod_host:5432/dafelhub_prod
# SECRET_KEY=ultra-secure-production-key-min-32-chars
# SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/project-id